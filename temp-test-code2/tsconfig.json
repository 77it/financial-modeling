{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "strict": true,
    "useDefineForClassFields": true,

    "inlineSourceMap": false,
    "lib": [],
    "module": "es2020",
    "target": "es2020",

    "declaration": true,
    "checkJs": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}